			ss="${s#Device: }"
			test "${s}" != "${ss}" || continue
			ip=$(ipconfig getifaddr "${ss}") || continue
			test -n "${ip}" || continue
			hw=$(networksetup -getmacaddress "${ss}")
			test -n "${hw}" && hw="${hw% (*}" && hw="${hw##* }"
			unset dns
			for i in $(sed -rn "s/^[[:space:]]*nameserver[[:space:]]+([^[:space:]]+).*/\1/p" /etc/resolv.conf); do
