puthash() {
	local file="${1}" terraform_source modules_directory git_root curdir hash new_terraform_source
	test -n "${file}" || return 201

	terraform_source=$(hcledit --file "${file}" attribute get terraform.source) || return 202
	test -n "${terraform_source}" || return 202

	#"github.com/Aer-Lingus/infrastructure-modules//genstats/tasks?ref=v0.272.67" -> infrastructure-modules
	modules_directory=$(echo "${terraform_source}" | sed -rn 's|.*/([^/]+)//.*|\1|p') || return 203 #'
	git_root=$(git rev-parse --show-toplevel) || return 204

	curdir=$(pwd)
	cd "${git_root}/../${modules_directory}" || return 205
	hash=$(env GIT_PAGER= git log --max-count=1 --pretty=%h) || return 206
	cd "${curdir}" || return 205
	test -n "${hash}" || return 206

	new_terraform_source=$(echo "${terraform_source}" | sed -rn "s|(.*\?ref=)([v.0-9a-f]+)(.*)|\1${hash}\3|p") || return 207 #"
	test -n "${new_terraform_source}" || return 207

	test "${terraform_source}" != "${new_terraform_source}" &&
		hcledit --file "${file}" --update attribute set terraform.source "${new_terraform_source}" &&
		echo "${hash}"
}

gfixup() {
	local main_branch hash

	main_branch=$(git symbolic-ref refs/remotes/origin/HEAD | sed -n 's|.*/||p') || return 201
	test -n "${main_branch}" || return 201

	hash=$(git cherry "${main_branch}" | sed 's/.*[[:space:]]//;q') || return 202
	test -n "${hash}" || return 202

	git reset --soft "${hash}" && git commit --all --amend --no-edit && echo "${hash}"
}

getag() {
	test -n "${1}" || return 201

	local main_branch hash
	main_branch=$(git symbolic-ref refs/remotes/origin/HEAD | sed -n 's|.*/remotes/||p') || return 202
	test -n "${main_branch}" || return 202

	hash=$(env GIT_PAGER= git log --max-count=1 --pretty=%h --invert-grep --extended-regexp --grep='\[(ci[[:space:]]+skip|skip[[:space:]]+ci)\]' "${main_branch}" -- "${1}") || return 203 #'
	test -n "${hash}" || return 203

	git tag --contains "${hash}" --sort version:refname | head -1
}

